#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -ueo pipefail

BUILD_DIR=$1

echo "HOME: $HOME"
echo "BUILD_DIR: $BUILD_DIR"

"$BUILD_DIR/.heroku/bin/heroku" plugins
HOME=$BUILD_DIR "$BUILD_DIR/.heroku/bin/heroku" plugins:install heroku-pg-extras
"$BUILD_DIR/.heroku/bin/heroku" plugins
